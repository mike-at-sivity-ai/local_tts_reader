{
  "manifest_version": 3,
  "name": "TTS Reader",
  "version": "1.1.0",
  "description": "Reads webpage content using Kokoro TTS service",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8880/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-tts.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon-tts.png"
  }
}